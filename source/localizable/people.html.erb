---
menu: people
title: People
---

<div class="page-header">
  <h1> People
    <small>List of people</small>
  </h1>
</div>

<div class="table-responsive">

  <table id="people_table" class="table table-striped table-bordered" data-toggle="table" data-filter-control="true">
    <thead>
    <tr>
      <th data-field="first_name" data-sortable="true" data-filter-control="input">
        First name
      </th>
      <th data-field="family_name" data-sortable="true" data-filter-control="input">Family name</th>
      <th data-field="lawyer" data-sortable="true" data-filter-control="select" data-filter-strict-search="true">Lawyer</th>
      <th>Contact persons</th>
      <th data-sortable="true">created at</th>
      <th data-sortable="true">updated at</th>
      <th>actions</th>
    </tr>
    </thead>

    <tbody>
    <% data.people.each do |person| %>
        <tr>
          <td><%= person.first_name %></td>
          <td><%= person.family_name %></td>
          <td><%= person.lawyer %></td>
          <td><%= person.contact_persons %></td>
          <td><%= person.created_at %></td>
          <td><%= person.updated_at %></td>
          <td><%= link_to "Show", "/#{I18n.locale}/person/#{person.id}.html" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
